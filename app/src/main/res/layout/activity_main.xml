<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderLayout
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_marginTop="40sp" />

        <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_centerHorizontal="true"
        android:text="* Hello Students To EdNotes App *"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btcollege"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180sp"
        android:background="@drawable/round_button"
        android:padding="25sp"
        android:text="For College Students"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="62dp"/>
    <Button
        android:id="@+id/btschool"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370sp"
        android:background="@drawable/round_button"
        android:padding="25sp"
        android:text="For School Students "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="277dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
</RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            app:headerLayout="@layout/header"
            app:itemIconTint="@color/black_overlay"
            app:itemTextColor="@color/black_overlay"
            app:menu="@menu/navigation_menu">

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
