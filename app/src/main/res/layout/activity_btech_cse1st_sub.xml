<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BtechCSESub.BtechCSE1stSub"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="#e7dcf6"
    android:gravity="center">

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt1"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundblue"
                    android:padding="10sp"
                    android:src="@drawable/number1" />

                <TextView
                    android:id="@+id/tvsub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Applied Mathematics - I"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt2"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundgreen"
                    android:padding="10sp"
                    android:src="@drawable/number2" />

                <TextView
                    android:id="@+id/tvsub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Applied Physics - I"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt3"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundgrey"
                    android:padding="10sp"
                    android:src="@drawable/number3" />

                <TextView
                    android:id="@+id/tvsub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Manufacturing Processes"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt4"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundpink"
                    android:padding="10sp"
                    android:src="@drawable/number4" />

                <TextView
                    android:id="@+id/tvsub4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Electrical Technology"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt5"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:padding="10sp"
                    android:src="@drawable/number5" />

                <TextView
                    android:id="@+id/tvsub5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Fundamental Of Computing"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgbt6"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:background="@drawable/circlebackgroundyellow"
                    android:padding="10sp"
                    android:src="@drawable/number6" />

                <TextView
                    android:id="@+id/tvsub6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Applied Chemistry"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>